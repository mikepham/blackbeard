{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "target": "es2015",
    "types": []
  },
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "include": [
    "src/src/**/*.ts",
    "src/**/*.tsx"
  ]
}
