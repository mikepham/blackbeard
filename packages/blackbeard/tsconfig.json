{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "isolatedModules": false,
    "lib": [
      "es2015"
    ],
    "typeRoots": [
      "src/types"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
