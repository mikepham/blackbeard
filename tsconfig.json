{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "lib": ["es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist-service",
    "paths": {
      "blackbeard/*": ["src/"],
      "blackbeard/clients": ["src/core/clients"],
      "blackbeard/core": ["src/core"],
      "blackbeard/configuration": ["src/core/configuration"],
      "blackbeard/datastore": ["src/datastore"],
      "blackbeard/hydra": ["src/hydra"],
      "blackbeard/io": ["src/core/i"],
      "blackbeard/logging": ["src/core/logging"],
      "blackbeard/models": ["src/models"],
      "blackbeard/scripts": ["src/scripts"],
      "blackbeard/services": ["src/core/services"],
      "blackbeard/transform": ["src/core/transformation"]
    },
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2015",
    "typeRoots": [
      "src/types"
    ],
    "types": [
      "@types/chai",
      "@types/couchbase",
      "@types/debug",
      "@types/glob",
      "@types/gulp-debug",
      "@types/gulp-load-plugins",
      "@types/gulp-mocha",
      "@types/gulp-shell",
      "@types/gulp-tslint",
      "@types/lodash.merge",
      "@types/minimatch",
      "@types/mocha",
      "@types/node",
      "@types/node-fetch",
      "@types/node-schedule",
      "@types/orchestrator",
      "@types/q",
      "@types/rimraf",
      "@types/vinyl",
      "common-locations"
    ]
  },
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ],
  "include": [
    "gulpfile.ts",
    "src/**/*.ts"
  ]
}
