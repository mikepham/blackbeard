{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "declaration": false,
    "isolatedModules": false,
    "lib": [
      "es2015"
    ],
    "paths": {
      "@blackbeaerd/*": [
        "./*/src"
      ]
    },
    "types": [
      "@nativecode/blackbeard.core",
      "@nativecode/blackbeard.core.node",
      "@types/clean-css",
      "@types/couchbase",
      "@types/html-minifier",
      "@types/merge-stream",
      "@types/relateurl",
      "ajv",
      "any-promise",
      "awesome-typescript-loader",
      "camel-case",
      "gulp-tslint",
      "gulp-typescript",
      "hash.js",
      "iconv-lite",
      "inversify",
      "lower-case",
      "moment",
      "no-case",
      "param-case",
      "pretty-error",
      "setprototypeof",
      "source-map",
      "tslib",
      "tslint",
      "typescript",
      "upper-case"
    ]
  },
  "exclude": [
    "node_modules",
    "packages"
  ],
  "include": [
    "*.ts",
    "packages/**/*.ts"
  ]
}