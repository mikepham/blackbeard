{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "pretty": true,
    "removeComments": true,
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2015",
    "types": [
      "@beard/core",
      "@beard/core.node",
      "@types/clean-css",
      "@types/couchbase",
      "@types/html-minifier",
      "@types/merge-stream",
      "@types/relateurl",
      "ajv",
      "any-promise",
      "awesome-typescript-loader",
      "camel-case",
      "gulp-tslint",
      "gulp-typescript",
      "hash.js",
      "iconv-lite",
      "inversify",
      "lower-case",
      "moment",
      "no-case",
      "param-case",
      "pretty-error",
      "setprototypeof",
      "source-map",
      "tslib",
      "tslint",
      "typescript",
      "upper-case"
    ]
  },
  "exclude": [
    "node_modules",
    "packages"
  ],
  "include": [
    "*.ts",
    "packages/**/*.ts"
  ]
}