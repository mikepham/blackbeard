{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "declaration": false,
    "isolatedModules": false,
    "lib": [
      "es2015"
    ],
    "paths": {
      "@blackbeaerd/*": [
        "./*/src"
      ]
    },
    "types": [
      "@types/chai",
      "@types/clean-css",
      "@types/couchbase",
      "@types/debug",
      "@types/extract-text-webpack-plugin",
      "@types/glob",
      "@types/gulp",
      "@types/gulp-copy",
      "@types/gulp-debug",
      "@types/gulp-load-plugins",
      "@types/gulp-mocha",
      "@types/gulp-shell",
      "@types/gulp-sourcemaps",
      "@types/gulp-tslint",
      "@types/html-minifier",
      "@types/html-webpack-plugin",
      "@types/lodash",
      "@types/lodash.merge",
      "@types/merge-stream",
      "@types/minimatch",
      "@types/mocha",
      "@types/node",
      "@types/node-fetch",
      "@types/node-schedule",
      "@types/orchestrator",
      "@types/q",
      "@types/react",
      "@types/react-dom",
      "@types/relateurl",
      "@types/rimraf",
      "@types/source-map",
      "@types/tapable",
      "@types/through",
      "@types/uglify-js",
      "@types/vinyl",
      "@types/webpack",
      "@types/yargs"
    ]
  },
  "exclude": [
    "node_modules",
    "packages"
  ],
  "include": [
    "*.ts"
  ]
}