{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./packages",
    "declaration": false,
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "paths": {
      "*": [
        "./core/src/*",
        "./core.browser/src/*",
        "./core.node/src/*",
        "./services/src/*",
        "./ui/src/*"
      ]
    },
    "pretty": true,
    "removeComments": true,
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2015",
    "types": [
      "@beard/core",
      "@beard/core.browser",
      "@beard/core.node",
      "@nofrills/types",
      "@types/clean-css",
      "@types/couchbase",
      "@types/html-minifier",
      "@types/merge-stream",
      "@types/relateurl",
      "ajv",
      "any-promise",
      "awesome-typescript-loader",
      "camel-case",
      "chalk",
      "common-locations",
      "get-own-enumerable-property-symbols",
      "gulp-tslint",
      "gulp-typescript",
      "hash.js",
      "hoist-non-react-statics",
      "iconv-lite",
      "inversify",
      "inversify-react",
      "is-plain-object",
      "isobject",
      "lower-case",
      "moment",
      "no-case",
      "param-case",
      "portfinder",
      "postcss",
      "pretty-error",
      "redux",
      "reflect-metadata",
      "setprototypeof",
      "source-map",
      "symbol-observable",
      "tslib",
      "tslint",
      "tweetnacl",
      "typescript",
      "upper-case",
      "worker-farm"
    ]
  },
  "exclude": [
    "node_modules",
    "packages"
  ],
  "include": [
    "*.ts",
    "packages/**/*.ts"
  ]
}